#!/usr/bin/env ruby

require "bundler/setup"
require "rapid_ui/commands/tailwind_css"

RapidUI::Commands::TailwindCSS.new(
  tools: {
    input: "app/assets/tailwind/tools.css",
    output: "app/assets/builds/tools.css",
    build_dir: "app/assets/builds",
    import: [ "tailwindcss", "rapid_ui/themes/night_owl", "rapid_ui/index" ]
  },
  nil => {
    input: "app/assets/tailwind/application.css",
    output: "app/assets/builds/application.css",
    build_dir: "app/assets/builds",
  }
).run(ARGV)
