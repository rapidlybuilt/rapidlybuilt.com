<%# Copied from RapidUI | Source: rapid_ui/docs/app/views/components/controls/datatables/index.html.erb %>
<% ui.layout.head.title = ["Datatables", "Controls"] %>
<% with_breadcrumb("Datatables") %>

<div class="demo-header">
  <h1 class="typography-h1">Datatables</h1>
  <p class="typography-body">Datatable components with sorting, filtering, and pagination.</p>
</div>

<%= table_of_contents typography: true do |headers| %>
  <div class="demo-section">
    <%= headers.h2 "Full Example" %>
    <p class="demo-description mb-8">A full example of a datatable with sorting, filtering, and pagination.</p>

    <%= component_controls_datatables_full_example %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Features" %>
    <p class="demo-description mb-8"><code class="typography-code">RapidUI::Datatable::Base</code> has these features built-in:</p>

    <% headers.h3 "Columns", path: url_for(action: "columns") %>
    <% headers.h3 "Search", path: url_for(action: "search") %>
    <% headers.h3 "Sorting", path: url_for(action: "sorting") %>
    <% headers.h3 "Export", path: url_for(action: "export") %>

    <ul class="demo-description list-disc pl-6 space-y-4">
      <li><strong><%= link_to "Columns", url_for(action: "columns"), class: "content-link" %></strong> — Define which columns appear in the table, their headers, how values are rendered and grouped. <%= link_to "Read more", url_for(action: "columns"), class: "content-link" %></li>
      <li><strong><%= link_to "Sorting", url_for(action: "sorting"), class: "content-link" %></strong> — Allow users to sort rows by specific columns.</li>
      <li><strong><%= link_to "Search", url_for(action: "search"), class: "content-link" %></strong> — Provide a search box that filters rows across specified columns.</li>
      <li><strong><%= link_to "Export", url_for(action: "export"), class: "content-link" %></strong> — Let users export the full dataset to CSV or JSON.</li>
    </ul>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Extensions" %>
    <p class="demo-description mb-8">Optional extensions that add additional features to the datatable.</p>

    <% headers.h3 "Pagination", path: url_for(action: "pagination") %>
    <% headers.h3 "Bulk Actions", path: url_for(action: "bulk_actions") %>
    <% headers.h3 "Select Filter", path: url_for(action: "select_filter") %>

    <ul class="demo-description list-disc pl-6 space-y-4">
      <li><strong><%= link_to "Pagination", url_for(action: "pagination"), class: "content-link" %></strong> — Split the dataset into pages so users can navigate through large result sets.</li>
      <li><strong><%= link_to "Bulk Actions", url_for(action: "bulk_actions"), class: "content-link" %></strong> — Enable selection of multiple rows and run actions on the selected set.</li>
      <li><strong><%= link_to "Select Filter", url_for(action: "select_filter"), class: "content-link" %></strong> — Filter rows by a column using a dropdown.</li>
    </ul>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Adapters" %>
    <p class="demo-description mb-8">Provides support for different data sources and Ruby libraries.</p>

    <% headers.h3 "ActiveRecord", path: url_for(action: "active_record") %>
    <% headers.h3 "Array", path: url_for(action: "array") %>
    <% headers.h3 "Kaminari", path: url_for(action: "kaminari") %>

    <ul class="demo-description list-disc pl-6 space-y-4">
      <li><strong><%= link_to "ActiveRecord", url_for(action: "active_record"), class: "content-link" %></strong> — Support for ActiveRecord models.</li>
      <li><strong><%= link_to "Array", url_for(action: "array"), class: "content-link" %></strong> — Support for raw Ruby arrays.</li>
      <li><strong><%= link_to "Kaminari", url_for(action: "kaminari"), class: "content-link" %></strong> — Support for Kaminari pagination.</li>
    </ul>
  </div>
<% end %>

